@import "tailwindcss";

@layer base {
	:root {
		/* Dark space theme colors - inspired by Astro */
		--color-bg-primary: #0a0a0f;
		--color-bg-secondary: #0f0f1a;
		--color-bg-card: rgba(15, 15, 26, 0.8);
		--color-bg-code: rgba(10, 10, 15, 0.9);
		
		/* Light beam colors from rays.png */
		--color-magenta: #ff00ff;
		--color-magenta-bright: #ff4dff;
		--color-yellow: #ffd700;
		--color-yellow-muted: #ffaa00;
