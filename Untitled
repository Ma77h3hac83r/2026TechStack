		--gradient-rainbow: linear-gradient(135deg, var(--color-magenta), var(--color-blue), var(--color-teal));
	}

	[data-theme="light"] {
		/* Light theme colors */
		--color-bg-primary: #ffffff;
		--color-bg-secondary: #f8f9fa;
		--color-bg-card: rgba(255, 255, 255, 0.9);
		--color-bg-code: rgba(248, 249, 250, 0.95);
		
